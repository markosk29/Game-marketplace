        <!--*box email*-->
        <TextBox x:Name="emailBox" HorizontalAlignment="Left" Margin="151,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="30" FontSize="20" FontWeight="Normal" BorderBrush="#FFB3ABAB"/>
